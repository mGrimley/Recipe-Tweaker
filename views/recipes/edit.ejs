<%- include('../partials/header') %>

<div class="flex-container">
  <h1 class="title-card"><%= title %></h1>

  <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <div class="flex-container">
      <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= recipe.title %>">
      </div>
  
      <div>
        <label>Main Category</label>
        <select name="mainCategory">
          <option value="Breakfast">Breakfast</option>
          <option value="Second Breakfast">Second Breakfast</option>
          <option value="Elevensies">Elevensies</option>
          <option value="Luncheon">Luncheon</option>
          <option value="Dinner">Dinner</option>
          <option value="Supper">Supper</option>
        </select>
      </div>
      
      <div>
        <label>Prep Time</label>
        <input type="number" name="prepTime" value="<%= recipe.prepTime %>">
      </div>
      
      <div>
        <label>Cook Time</label>
        <input type="number" name="cookTime" value="<%= recipe.cookTime %>">
      </div>
      
      <div>
        <label>Ingredients</label>
        <input type="text" name="ingredients" value="<%= recipe.ingredients.join(', ') %>">
      </div>
      
      <div>
        <label></label>Steps</label>
        <input type="text" name="steps" value="<%= recipe.steps.join(', ') %>">
      </div>
      
      <div>
        <input type="submit" value="Resubmit Recipe" class="btn">
      </div>

    </div>
  </form>
</div>
  
<%- include('../partials/footer') %>